@page
@model SuccessModel
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a asp-page="/Index">Home</a></li>
   <li class="breadcrumb-item"><a asp-page="/Reserve">Rerserve a Car</a></li>
    <li class="breadcrumb-item active" aria-current="page">Success</li>
  </ol>
</nav>
<div class="card mb-3 text-center">
   <div class="card-body">
      <h1 class="card-title success">Congratulations! Reservation Successfull.</h1>
   </div>
</div>
<div class="container card-container">
   <div class="row">
      @{
         int index = 1;
      }
      @foreach (var reservation in Model.reservations)
      {
         <h3 class="text-center card-container">Your Reservation Summary</h3>
         <div class="col-md-6 card-container">
            <div class="card">
               <div class="card-header text-center">
                  Car Information
               </div>
               <img class="card-img-top" src="@reservation.carInfo.ImagePath" alt="Card image cap" height="225">
               <div class="card-body text-center">
                  <h5 class="card-title">@reservation.carInfo.Make - @reservation.carInfo.Model</h5>
                  <p class="card-text">Rent (CAD): $@reservation.carInfo.RentPerDay/ day</p>
               </div>
            </div>
         </div>
         <div class="col-md-6 card-container">
            <div class="card">
               <div class="card-header text-center">
                  Reservation Information
               </div>
               <div class="card-body ">
                  <h3 class="card-title">Customer Name: @reservation.reservationInfo.CustomerName</h3><br>
                  <p class="card-text">Customer Phone: @reservation.reservationInfo.CustomerPhone</p><br>
                  <p class="card-text">Customer Address: @reservation.reservationInfo.CustomerAddress</p><br>
                  <p class="card-text">Reservation Date and Time:
                     @reservation.reservationInfo.ReservationDateTime.ToString("dd-MMM-yyyy, h:mm tt")</p><br>
               </div>
            </div>
         </div>
         index++;
      }
   </div>
</div>
<div class="container mt-5">
    <div class="mb-3 text-center">
        <div class="card-body d-flex justify-content-center">
            <a class="btn btn-custom" asp-page="/Index">
                Home
            </a>
        </div>
    </div>
</div>